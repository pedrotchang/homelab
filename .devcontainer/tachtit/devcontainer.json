{
  "name": "Cluster - Tachtit",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "workspaceMount": "source=${localWorkspaceFolder},target=/homelab,type=bind",
  "workspaceFolder": "/homelab",
  "containerEnv": {
    "MISE_ENV": "tachtit"
  },
  "onCreateCommand": "sudo chsh -s /usr/bin/zsh $USER && echo 'cd /homelab 2>/dev/null' >> ~/.zshrc",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "/usr/bin/zsh"
      }
    },
    "terminal.integrated.cwd": "/homelab"
  }
}
