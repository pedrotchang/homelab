{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["after 3am and before 4am on wednesday"],
  "enabledManagers": ["flux", "kubernetes"],
  "flux": {
    "fileMatch": [
      "(^|/)infrastructure/.+\\.ya?ml$",
      "(^|/)clusters/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)infrastructure/.+\\.ya?ml$",
      "(^|/)clusters/.+\\.ya?ml$",
      "(^|/)apps/.+\\.ya?ml$"
    ]
  }
}
